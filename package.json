{
    "private": true,
    "scripts": {
        "dev": "NODE_ENV=development nodemon --exec babel-node ./server/server.js",
        "start": "npm run build && NODE_ENV=production node ./build/server.js",
        "build": "npm run clean && npm run babel-build",
